          "address": {
            "type": "string",
            "description": "Street address",
            "example": "Lækjargata 1",
            "nullable": false
          },
          "postalCode": {
            "type": "string",
            "description": "Postal code",
            "example": "101",
            "nullable": false
          },
          "city": {
